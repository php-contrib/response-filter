{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "phpolar/response-filter",
    "description": "Supports filtering PSR-7 HTTP Responses",
    "type": "library",
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7"
    },
    "license": "MIT",
    "scripts": {
        "ci:lint": "composer exec \"@lint\"",
        "ci:lint-fix": "composer exec \"@lint-fix\"",
        "lint": "phpcs",
        "lint-fix": "phpcbf",
        "semgrep": "semgrep --config auto -l php ./src"
    }
}
